<h2 class="page-title">SuaTonKho</h2>

<main id="main" class="main" style="width:100%; padding: 20px;">

    <div class="pagetitle">
        <h1>Dashboard</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                <li class="breadcrumb-item active">Dashboard</li>
            </ol>
        </nav>
    </div>

    <section class="section dashboard">
        <div class="row">
            <div class="col-lg-8 mx-auto">

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <h4 class="form-header">Thông tin tồn kho</h4>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <!-- SanPhamID Field -->
                        <div class="form-group row">
                            @Html.LabelFor(model => model.SanPhamID, htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                @Html.EditorFor(model => model.SanPhamID, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.SanPhamID, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <!-- SoLuongTon Field -->
                        <div class="form-group row">
                            @Html.LabelFor(model => model.SoLuongTon, htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                @Html.EditorFor(model => model.SoLuongTon, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.SoLuongTon, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <!-- Submit Button -->
                        <div class="form-group row">
                            <div class="col-md-offset-3 col-md-9">
                                <input type="submit" value="Thay đổi" class="btn btn-primary" />
                                @Html.ActionLink("Quay lại", "SanPhamTonKho", "QuanLyTonKho", new { area = "" }, new { @class = "btn btn-secondary" })
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
    </section>
</main>

