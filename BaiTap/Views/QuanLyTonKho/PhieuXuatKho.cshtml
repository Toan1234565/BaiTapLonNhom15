@model IEnumerable<BaiTap.Models.ChiTietPhieuXuat>

@{
    ViewBag.Title = "PhieuXuatKho";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>danh sách phiếu xuất hàng</h2>

<main id="main" class="main" style="width:100%">

    <div class="pagetitle">
        <h1>Dashboard</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                <li class="breadcrumb-item active">Dashboard</li>
            </ol>
        </nav>
    </div>
    <section class="section dashboard">
        <div class="row">
            <div class="col-lg-8" style="width:1200px">
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.PhieuXuatID)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SanPhamID)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SoLuong)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DonGia)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ThanhTien)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PhieuXuat.NgayXuat)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.PhieuXuatID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SanPhamID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SoLuong)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DonGia)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ThanhTien)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PhieuXuat.NgayXuat)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.ChiTietPhieuXuatID }) |
                                @Html.ActionLink("Details", "Details", new { id = item.ChiTietPhieuXuatID }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.ChiTietPhieuXuatID })
                            </td>
                        </tr>
                    }
                    <th style="padding-left:50px">
                        @Html.ActionLink("Xuat kho", "CreateExport", "QuanLyTonKho")
                    </th>

                </table>
            </div>
        </div>
    </section>
</main>
