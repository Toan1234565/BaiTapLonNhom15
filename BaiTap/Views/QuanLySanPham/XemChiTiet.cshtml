@model IEnumerable<BaiTap.Models.ChiTietSanPham>

@{
    ViewBag.Title = "XemChiTiet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>XemChiTiet</h2>



<main id="main" class="main" style="width:100%">

    <div class="pagetitle">
        <h1>Dashboard</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                <li class="breadcrumb-item active">Dashboard</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section dashboard">
        <div class="row">
            <!-- Left side columns  -->
            <div class="col-lg-8" style="width:1200px">

                <div class="row">

                    <!-- Recent Sales -->
                    <div class="col-12">
                        <div class="card recent-sales overflow-auto">

                            <div class="filter">
                                <a class="icon" href="#" data-bs-toggle="dropdown"><i class="bi bi-three-dots"></i></a>
                                <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                                    <li class="dropdown-header text-start">
                                        <h6>Filter</h6>
                                    </li>

                                    <li><a class="dropdown-item" href="#">Today</a></li>
                                    <li><a class="dropdown-item" href="#">This Month</a></li>
                                    <li><a class="dropdown-item" href="#">This Year</a></li>
                                </ul>
                            </div>

                            <div class="card-body">
                                <h5 class="card-title">Recent Sales <span>| Today</span></h5>
                                <table>


                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                mã sản phẩm:
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.SanPhamID)
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                               Màn hinh: 
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ManHinh)
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                               Hệ điều Hành: 
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.HeDieuHanh)
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                CameraTruoc:
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.CameraTruoc)
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                               CameraSau:
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.CameraSau)
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                Chip:
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Chip)
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                RAM:
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.RAM)
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                               Bộ nhớ trong:
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.BoNhoTrong)
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                Sim:
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Sim)
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                Pin:
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Pin)
                                            </td>
                                        </tr>
                                    }
                                    </table>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>

    </section>

</main><!-- End #main -->








